{
    "name": "@purinton/linuxbot",
    "type": "module",
    "version": "1.0.0",
    "description": "A modern Discord app built with Node.js, based on the purinton/discord foundation.",
    "main": "linuxbot.mjs",
    "scripts": {
        "start": "node linuxbot.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/linuxbot.git"
    },
    "keywords": [
        "linuxbot",
        "nodejs"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/linuxbot/issues"
    },
    "homepage": "https://github.com/purinton/linuxbot#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.17",
        "@purinton/discord": "^1.0.14",
        "@purinton/openai": "^1.0.2",
        "dotenv": "^17.2.0"
    }
}
